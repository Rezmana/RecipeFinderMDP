<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Food Picture -->
    <ImageView
        android:id="@+id/foodPicture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Food Picture"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_assignment_add_24" />

    <!-- Food Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="8dp" />

        <ImageButton
            android:id="@+id/btnSaveRecipe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save Recipe"
            android:src="@drawable/baseline_save_24"
            app:tint="@color/design_default_color_primary" />
    </LinearLayout>


    <!-- By User -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By: "
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="8dp" />
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="8dp" />

</LinearLayout>


    <!-- Tags -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegan"
            android:background="@drawable/tag_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cookingTypes"
            android:text="Cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Description Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/etDialogFoodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textSize="14sp"
        android:layout_marginStart="8dp" />

    <!-- Ingredients Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp" />

    <!-- Container for dynamic ingredients -->
    <LinearLayout
        android:id="@+id/ingredientsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp" />

    <!-- Button at the bottom -->
    <Button
        android:id="@+id/seeMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See more"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
